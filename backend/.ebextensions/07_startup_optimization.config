# Optimize application startup and prevent timeouts
option_settings:
  aws:elasticbeanstalk:container:python:
    # Python/WSGI configuration
    WSGIPath: app.main:app
  
  aws:elasticbeanstalk:application:environment:
    # Environment variables
    PYTHONUNBUFFERED: "1"
    # Prevent Python from buffering output (better logging)
  
  aws:autoscaling:launchconfiguration:
    # Instance configuration
    IamInstanceProfile: aws-elasticbeanstalk-ec2-role
  
  aws:elasticbeanstalk:command:
    # Command timeout settings (in seconds)
    Timeout: 3600  # 1 hour for long-running commands
  
  aws:elasticbeanstalk:healthreporting:system:
    # Enhanced health reporting
    SystemType: enhanced


